# Copy this file to .env to customize settings (most are optional)

# Ollama Settings (usually not needed unless custom host)
OLLAMA_HOST=127.0.0.1
OLLAMA_PORT=11434

# LLM Model (change if you want a different default model)
DEFAULT_MODEL=llama3.2
# Other good options: qwen2.5, phi3, gemma2

# Voice Settings
VOICE_RATE=180          # Speech speed (150-200 recommended)
VOICE_VOLUME=0.9        # 0.0 to 1.0

# RAG Settings
CHROMA_DB_PATH=chroma_db
EMBEDDING_MODEL=llama3.2

# Future API integrations (uncomment and fill when adding tools)
# GOOGLE_API_KEY=your_key_here
# GOOGLE_CALENDAR_CREDENTIALS=credentials.json
# OPENWEATHER_API_KEY=your_key_here
